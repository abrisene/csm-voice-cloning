# API settings
API_TITLE="CSM Voice Cloning API"
API_DESCRIPTION="OpenAI-compatible API for CSM voice cloning"
API_VERSION="0.1.0"

# Server settings
HOST="0.0.0.0"
PORT=8000

# Model settings
# Set to "cpu" if you don't have a CUDA-compatible GPU
DEVICE="cuda"
# Your Hugging Face token for downloading the model
HF_TOKEN="your_hugging_face_token"

# File storage
UPLOAD_DIR="uploads"
OUTPUT_DIR="outputs"

# CORS settings
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
